<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.wyhwy.diagnosis_backend.mapper.ModelMapper">

    <select id="findById" resultType="com.wyhwy.diagnosis_backend.domain.Model">
        SELECT * FROM model m WHERE m.id = #{id}
    </select>

    <select id="select" resultType="com.wyhwy.diagnosis_backend.domain.Model">
        SELECT * FROM model LIMIT #{start}, #{len}
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM model
    </select>

    <insert id="create">
        INSERT INTO model (model_address, created_time, created_by, updated_time, updated_by, remark)
        VALUES(#{modelAddress}, #{createdTime}, #{createdBy}, #{updatedTime}, #{updatedBy}, #{remark})
    </insert>
    <update id="update">
        UPDATE model
        <set >
            <if test="modelAddress != null">
                model_address = #{modelAddress},
            </if>
            <if test="updatedTime != null">
                updated_time = #{updatedTime},
            </if>
            <if test="updatedBy != null">
                updated_by = #{updatedBy},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="del">
        DELETE FROM model WHERE id = #{id}
    </delete>
</mapper>