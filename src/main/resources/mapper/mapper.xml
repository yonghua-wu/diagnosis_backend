<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.wyhwy.diagnosis_backend.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.wyhwy.diagnosis_backend.User" >
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="professional_title" property="professionalTitle" />
        <result column="phone" property="phone" javaType="String" />
    </resultMap>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT username, password, phone, professional_title FROM user_table WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.wyhwy.diagnosis_backend.User">
        INSERT INTO user_table (username, password, professional_title, phone) VALUES (#{username}, #{password}, #{professionalTitle}, #{phone})
    </insert>
</mapper>
